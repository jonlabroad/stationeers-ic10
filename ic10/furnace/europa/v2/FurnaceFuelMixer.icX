alias Mixer d0
alias MixAnalyzer d1

const ENABLE = 1
const DISABLE = 0

const MIX_HIGH_PRESSURE = 6000
const MIX_LOW_PRESSURE = 1000

Mixer.On = DISABLE

var mixerOn = DISABLE
main:
    var mixPressure = MixAnalyzer.Pressure
    if mixPressure < MIX_LOW_PRESSURE
        mixerOn = ENABLE
    end
    if mixerOn == ENABLE && mixPressure > MIX_HIGH_PRESSURE
        mixerOn = DISABLE
    end
    Mixer.On = mixerOn

    yield
j main
